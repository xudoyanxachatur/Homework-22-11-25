using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Xndirner
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int n = 4;
            string result = RepeatPattern("ABC", n);
            Console.WriteLine(result);
        }
        static string RepeatPattern(string pattern, int n)
        {
            StringBuilder sb = new StringBuilder(pattern.Length * n);

            for (int i = 0; i < n; i++)
            {
                sb.Append(pattern);
            }

            return sb.ToString();
        }
    }
}
